# Basic subtractive synthesis patch
# Oscillator -> Filter -> VCA -> Output
# Envelope controls VCA amplitude

# Create modules
vco: osc saw 220
vcf: filter
vca: vca
env: env

# Set parameters
vcf.cutoff <- 1200
vcf.res <- 0.5
env.attack <- 0.01
env.decay <- 0.3
vca.gain <- 0.8

# Connections
vcf <- vco
vca <- vcf

# For now we can't connect envelope to VCA CV input
# (need to implement multi-input routing)
# But we trigger the envelope
env.trigger <- 1.0

# Output
out <- vca